<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".profileperson">

    <LinearLayout
        android:id="@+id/Linearlayout3"
        android:layout_width="401dp"
        android:layout_height="574dp"
        android:background="@color/primaryColor"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"
        tools:layout_editor_absoluteX="9dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="70dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/Perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@color/primaryColor"
                android:paddingBottom="20dp"
                android:text="@string/Profile_Title"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/secondaryTextColor"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_supervised_user_circle_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="385dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:paddingLeft="53dp"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/Profile_Email"
                    android:textAlignment="viewEnd"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@color/bg_product"
                android:hint="@string/Check_Edit_Email_hint"
                android:padding="10dp"
                android:textColorHint="@color/ColorHint" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/Profile_Password"
                    android:textAlignment="viewEnd"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <EditText
                android:id="@+id/etPass"
                android:layout_width="248dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@color/bg_product"
                android:hint="@string/Check_Edit_Password_hint"
                android:padding="10dp"
                android:textColorHint="@color/ColorHint" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="385dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/Profile_Name"
                    android:textAlignment="viewEnd"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <EditText
                android:id="@+id/etName"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@color/bg_product"
                android:hint="@string/Check_Edit_Name_hint"
                android:padding="10dp"
                android:textColorHint="@color/ColorHint" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="385dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/Profile_Telephone"
                    android:textAlignment="viewEnd"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@color/bg_product"
                android:hint="@string/Check_Edit_Telephone_hint"
                android:padding="10dp"
                android:textColorHint="@color/ColorHint" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSave2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/secondaryColor"
            android:text="@string/Profile_Cancel"
            android:onClick="goToMain"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>